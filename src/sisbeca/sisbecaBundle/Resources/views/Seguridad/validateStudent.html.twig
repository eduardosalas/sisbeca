{% extends "::base.html.twig"%}

{% block contenido %}



    <div class="col-lg-4"></div>

    <div class="col-lg-4" align="center">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title" align="center">Validar Estudiante</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path('sisbecaBundle_validate') }}" method="post" {{ form_enctype(form) }}>

                    {% if app.session.hasFlash('ms') %}
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            {{ app.session.flash('ms') }}
                        </div>
                    {% endif %}

                    <div class="form-group">
                        {{ form_widget(form.cedula, { 'attr': { 'class': 'form-control', 'placeholder': 'Cédula de Identidad'} }) }}
                        {{ form_errors(form.cedula) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.archivador, { 'attr': { 'class': 'form-control', 'placeholder': 'Nº Expediente'} }) }}
                        {{ form_errors(form.archivador) }}
                    </div><br>

                    {{ form_rest(form) }}

                    <button type="submit" class="btn btn-info center-block">Aceptar</button>

                </form>

            </div>
        </div>
    </div><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>



{% endblock %}